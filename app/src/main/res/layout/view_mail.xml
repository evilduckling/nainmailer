<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.evilduckling.nainmailer.view.MaterialIconView
            android:id="@+id/ico_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/ico_read_mail"
            android:textColor="@color/unread"
            android:textSize="@dimen/ico_size"
            />

        <com.evilduckling.nainmailer.view.MaterialIconView
            android:id="@+id/ico_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/ico_read_mail"
            android:textColor="@color/read"
            android:textSize="@dimen/ico_size"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Author"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <com.evilduckling.nainmailer.view.MaterialIconView
            android:id="@+id/button_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:text="@string/ico_archive"
            android:textColor="@color/ico_color"
            android:textSize="@dimen/ico_size"
            />

        <com.evilduckling.nainmailer.view.MaterialIconView
            android:id="@+id/button_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:text="@string/ico_delete_forever"
            android:textColor="@color/ico_color"
            android:textSize="@dimen/ico_size"
            />

    </LinearLayout>

    <WebView
        android:id="@+id/mail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/background"
        android:visibility="gone"
        />

</LinearLayout>